# Supabase Configuration
# Get these values from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api

VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="your-publishable-key"
VITE_SUPABASE_URL="https://your-project-id.supabase.co"

# API Gateway Configuration (Phase 0+)
# Feature flag to enable/disable API Gateway (false = direct Supabase, true = via API Gateway)
VITE_USE_API_GATEWAY=false
# URL of the API Gateway Edge Function
VITE_API_GATEWAY_URL="https://your-project-id.supabase.co/functions/v1/api-gateway"
# For local development with Supabase CLI: http://localhost:54321/functions/v1/api-gateway

# Middleware Configuration
# URL of the Hono middleware for integrations (OAuth, sync, etc.)
VITE_MIDDLEWARE_URL="https://your-middleware.railway.app"
# For local development: http://localhost:3001
